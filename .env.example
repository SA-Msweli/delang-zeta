# DeLangZeta Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real values!

# ===== GOOGLE CLOUD CONFIGURATION =====
VITE_PROJECT_ID=your-google-cloud-project-id
VITE_REGION=us-central1

# ===== CLOUD FUNCTION ENDPOINTS =====
VITE_AUTH_URL=https://us-central1-your-project-id.cloudfunctions.net/delang-auth
VITE_STORAGE_UPLOAD_URL=https://us-central1-your-project-id.cloudfunctions.net/delang-storage-upload
VITE_STORAGE_DOWNLOAD_URL=https://us-central1-your-project-id.cloudfunctions.net/delang-storage-download
VITE_AI_VERIFICATION_URL=https://us-central1-your-project-id.cloudfunctions.net/delang-ai-verification
VITE_REALTIME_SYNC_URL=https://us-central1-your-project-id.cloudfunctions.net/delang-realtime-sync
VITE_MONITORING_HEALTH_URL=https://us-central1-your-project-id.cloudfunctions.net/delang-monitoring-health

# ===== API KEYS (Store in Google Secret Manager in production) =====
# These should only be used for local development
GEMINI_API_KEY=your-gemini-api-key-here
GOOGLE_TRANSLATE_API_KEY=your-translate-api-key-here
GOOGLE_SPEECH_API_KEY=your-speech-to-text-api-key-here

# ===== BLOCKCHAIN CONFIGURATION =====
# ZetaChain network configuration
ZETACHAIN_NETWORK=testnet
ZETACHAIN_RPC_URL=https://zetachain-athens-evm.blockpi.network/v1/rpc/public
ZETACHAIN_CHAIN_ID=7001

# Smart contract addresses (filled after deployment)
UNIVERSAL_CONTRACT_ADDRESS=your-contract-address-after-deployment

# Private key for server-side operations (NEVER commit real keys!)
PRIVATE_KEY=your-private-key-for-server-operations

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=your-database-connection-string
FIRESTORE_PROJECT_ID=your-firestore-project-id

# ===== JWT CONFIGURATION =====
JWT_SECRET=your-jwt-signing-secret-key
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===== STORAGE CONFIGURATION =====
STORAGE_BUCKET_DATASETS=your-project-id-datasets
STORAGE_BUCKET_METADATA=your-project-id-metadata
STORAGE_BUCKET_AUDIT=your-project-id-audit-logs

# ===== MONITORING AND ALERTING =====
ALERT_EMAIL=your-alert-email@domain.com
MONITORING_ENABLED=true
LOG_LEVEL=info

# ===== DEVELOPMENT SETTINGS =====
NODE_ENV=development
VITE_APP_ENV=development
DEBUG=true

# ===== SECURITY SETTINGS =====
CORS_ORIGIN=http://localhost:3000,https://your-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== FEATURE FLAGS =====
ENABLE_AI_VERIFICATION=true
ENABLE_CROSS_CHAIN=true
ENABLE_GOVERNANCE=true
ENABLE_MARKETPLACE=true

# ===== THIRD-PARTY INTEGRATIONS =====
# Add any third-party service API keys here
# EXAMPLE_SERVICE_API_KEY=your-api-key

# ===== LOCAL DEVELOPMENT OVERRIDES =====
# Use these to override settings for local development
LOCAL_OVERRIDE_AUTH_URL=http://localhost:8080/auth
LOCAL_OVERRIDE_STORAGE_URL=http://localhost:8080/storage

# ===== TESTING CONFIGURATION =====
TEST_DATABASE_URL=your-test-database-url
TEST_PRIVATE_KEY=your-test-private-key
TEST_API_KEYS=true